{
  "name": "xovis",
  "displayName": "xovis",
  "description": "JSON 计算图可视化工具",
  "version": "0.1.0",
  "publisher": "xovis",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "icon": "images/icon.png",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xovis.open",
        "title": "打开 xovis 可视化",
        "category": "xovis"
      }
    ],
    "customEditors": [
      {
        "viewType": "xovis.graph",
        "displayName": "xovis 计算图",
        "selector": [
          {
            "filenamePattern": "*.graph.json"
          },
          {
            "filenamePattern": "*.computation-graph.json"
          }
        ],
        "priority": "option"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "xovis.open",
          "when": "true"
        }
      ],
      "explorer/context": [
        {
          "command": "xovis.open",
          "when": "resourceExtname == .json",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "node esbuild.config.mjs",
    "watch": "tsc -watch -p ./",
    "package": "NODE_OPTIONS=--no-deprecation vsce package --no-dependencies --allow-missing-repository",
    "postinstall": "node scripts/postinstall.mjs",
    "prepackage": "node -e \"const fs=require('fs');if(!fs.existsSync('media/index.html')){console.error('Error: media/ missing. Run pnpm run package:vscode from repo root');process.exit(1)}\"",
    "lint": "eslint src --ext .ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.3.2",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.24.0",
    "sharp": "^0.33.0"
  },
  "dependencies": {
    "@xovis/core": "workspace:*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lancerstadium/xovis"
  },
  "homepage": "https://github.com/lancerstadium/xovis#readme",
  "bugs": {
    "url": "https://github.com/lancerstadium/xovis/issues"
  },
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "keywords": [
    "graph",
    "visualization",
    "json",
    "computation-graph",
    "neural-network",
    "dagre"
  ]
}