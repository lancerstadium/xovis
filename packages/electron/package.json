{
  "name": "@xovis/electron",
  "version": "0.1.0",
  "description": "xovis Electron 桌面应用",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "electron .",
    "build": "tsc && electron-builder",
    "build:win": "pnpm build -- --win",
    "build:mac": "pnpm build -- --mac",
    "build:linux": "pnpm build -- --linux",
    "electron:dev": "concurrently \"cd ../web && pnpm dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:pack": "electron-builder"
  },
  "build": {
    "appId": "com.xovis.app",
    "productName": "xovis",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "../../web/dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "target": ["dmg"]
    },
    "linux": {
      "target": ["AppImage"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "lancerstadium",
  "dependencies": {
    "@xovis/core": "workspace:*",
    "@xovis/web": "workspace:*",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.2",
    "wait-on": "^7.2.0"
  },
  "peerDependencies": {
    "electron": "^28.0.0"
  }
}
